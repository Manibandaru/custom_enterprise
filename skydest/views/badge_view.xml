<?xml version="1.0" encoding="utf-8"?>
<odoo>



    <record id="paperformat_skydest_badge" model="report.paperformat">
        <field name="name">Skydest Badge</field>
        <field name="default" eval="True"/>
         <field name="format">custom</field>
        <field name="page_height">130</field>
        <field name="page_width">94</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">9</field>
        <field name="dpi">110</field>
    </record>

    <!-- template use to render a Registration Badge -->
    <template id="event.event_registration_report_template_badge">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <div class="row">
                        <!-- Front -->
                        <div class=" text-center" >
                            <div>
                                <div class="text-center">
                                    <img t-att-src="'/skydest/static/comeonkerala.jpeg'" style="max-height:5cm; max-width:8cm;"/>
                                    <img t-att-src="'/skydest/static/skydest.jpeg'" style="max-height:5cm; max-width:8cm;"/>
<!--                                    <t t-if="o.event_id.event_logo">-->
<!--                                        <div t-field="o.event_id.event_logo"/>-->
<!--                                    </t>-->
<!--                                    <span t-if="not o.event_id.event_logo and o.event_id.organizer_id.company_id.logo_web and o.event_id.organizer_id.is_company">-->
<!--                                        <img t-att-src="image_data_uri(o.event_id.organizer_id.company_id.logo_web)" style="max-height:8cm; max-width:8cm;" alt="Logo"/>-->
<!--                                    </span>-->
                                    <h5 t-field="o.event_id.name"/>
                                    <h5>( <i class="fa fa-clock-o" aria-label="Period" role="img" title="Period"></i> <span itemprop="startDate" t-field="o.event_id.with_context(tz=o.event_id.date_tz).date_begin" t-options='{"hide_seconds": True}'> </span> <i>to</i> <span itemprop="endDate" t-field="o.event_id.with_context(tz=o.event_id.date_tz).date_end" t-options='{"hide_seconds": True}'> </span> )</h5>
                                </div>
                                <div>
                                    <div class=" text-center" id="o_event_name">
                                        <small>
                                            <h3 t-field="o.name"/>
                                        </small>
                                    </div>
                                </div>
                                <img t-att-src="'/skydest/static/comeonkerala1.jpeg'" style="max-height:4cm; max-width:8cm;"/>
                                <img t-att-src="'/skydest/static/gulf.jpeg'" style="max-height:4cm; max-width:8cm;"/>

                            </div>
                        </div>

                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>